{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "types", "**/*.test.ts"]
}
